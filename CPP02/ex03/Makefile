NAME = Fixed

SRC	=   sources/Fixed.cpp \
		sources/arithmetic.cpp \
		sources/comparison.cpp \
		sources/increment_decrement.cpp \
		sources/static.cpp \
		sources/Point.cpp \
		sources/bsp.cpp \
		sources/main.cpp

INC =   -I ./includes/
   
OBJS = $(SRC:%.cpp=%.o)

CPP = c++
CPP_FLAGS = -Wall -Wextra -Werror -std=c++98 

all: $(NAME)

$(NAME):		$(OBJS)
	@$(CPP) $(CPP_FLAGS) $(INC) $(OBJS) -o $(NAME)
	@echo "\nâœ¨ Fixed 4.0 ready.\n"

%.o: %.cpp
	@$(CPP) $(CPP_FLAGS) -c -o $@ $<
	
clean:
	@rm -f $(OBJS)
	@echo "\nðŸ’§ Clean done \n"

fclean: clean
	@rm -f $(NAME)
	
re: fclean all

.PHONY: all clean fclean re